        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .hero-title {
                font-size: clamp(2rem, 4vw, 2.5rem) !important;
                line-height: 1.2;
            }
            
            .hero-subtitle {
                font-size: clamp(1rem, 2.5vw, 1.1rem) !important;
                line-height: 1.4;
            }
            
            .service-card h1 {
                font-size: clamp(1.2rem, 4vw, 1.8rem) !important;
                line-height: 1.4;
                margin-bottom: 1rem;
                padding: 0.3rem 0;
            }
            
            .hero-buttons {
                flex-direction: column;
                gap: var(--space-md);
                align-items: center;
            }
            
            .hero-btn-primary,
            .hero-btn-secondary {
                width: 100%;
                max-width: 280px;
                margin: 0;
            }
            
            .service-card {
                padding: var(--space-lg);
                margin-bottom: var(--space-lg);
            }
            
            .service-card img {
                aspect-ratio: 16/9;
                object-fit: cover;
            }
        }
    </style>


