    <style>
        @font-face {
            font-family: 'droid';
            src: url('/fonts/DroidKufi-Regular.woff');
        }
        @font-face {
            font-family: 'droid-b';
            src: url('/fonts/DroidKufi-Bold.woff');
        }
        
        :root {
            --primary-gold: #d1ad56;
            --secondary-gold: #b78632;
            --dark-gold: #8b6914;
            --light-gold: #e1dd84;
            --dark-bg: #1a1a1a;
            --darker-bg: #0f0f0f;
            --text-light: #f8f9fa;
            --text-muted: #6c757d;
            --gradient-gold: linear-gradient(135deg, #d1ad56 0%, #b78632 100%);
            --gradient-dark: linear-gradient(135deg, #1a1a1a 0%, #0f0f0f 100%);
            --shadow-gold: 0 4px 20px rgba(209, 173, 86, 0.3);
            --shadow-dark: 0 4px 20px rgba(0, 0, 0, 0.5);
        }
        
        * {
            font-family: "Noto Kufi Arabic", "Cairo", sans-serif;
            font-weight: 400;
            scroll-behavior: smooth;
        }

        body {
            background: var(--gradient-dark);
            color: var(--text-light);
            line-height: 1.6;
        }

        ul.lst {
            list-style: none;
            line-height: 2.5;
            padding-left: 0;
        }

        ul.lst li {
            position: relative;
            padding-right: 20px;
            margin-bottom: 10px;
            transition: all 0.3s ease;
        }

        ul.lst li:before {
            content: "▶";
            color: var(--primary-gold);
            font-size: 12px;
            position: absolute;
            right: 0;
            top: 50%;
            transform: translateY(-50%);
        }

        ul.lst li:hover {
            color: var(--primary-gold);
            transform: translateX(-5px);
        }

        h1 {
            font-size: 36px !important;
            font-weight: 700;
            background: var(--gradient-gold);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        a.lang, img.lang {
            display: block;
            height: 36px;
            transition: transform 0.3s ease;
        }

        a.lang:hover {
            transform: scale(1.1);
        }

        /* Custom scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: var(--darker-bg);
        }

        ::-webkit-scrollbar-thumb {
            background: var(--gradient-gold);
            border-radius: 4px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: var(--secondary-gold);
        }

        /* Loading animation */
        .loading {
            display: inline-block;
            width: 20px;
            height: 20px;
            border: 3px solid rgba(209, 173, 86, 0.3);
            border-radius: 50%;
            border-top-color: var(--primary-gold);
            animation: spin 1s ease-in-out infinite;
        }

        @keyframes spin {
            to { transform: rotate(360deg); }
        }

        /* Smooth transitions */
        .card, .btn, .nav-link, .navbar-brand {
            transition: all 0.3s ease;
        }

        /* Glass morphism effect */
        .glass {
            background: rgba(26, 26, 26, 0.8);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(209, 173, 86, 0.2);
        }

        /* Enhanced Mobile optimizations */
        @media (max-width: 768px) {
            /* Navbar improvements */
            .navbar-brand img {
                height: 35px !important;
            }
            
            .navbar-nav .nav-link {
                padding: 12px 20px;
                font-size: 16px;
                text-align: center;
                border-bottom: 1px solid rgba(209, 173, 86, 0.1);
                transition: all 0.3s ease;
            }
            
            .navbar-nav .nav-link:last-child {
                border-bottom: none;
            }
            
            .navbar-nav .nav-link:hover {
                background: rgba(209, 173, 86, 0.1);
                color: var(--primary-gold) !important;
            }
            
            .navbar-collapse {
                background: rgba(0, 0, 0, 0.95);
                border-radius: 10px;
                margin-top: 10px;
                padding: 15px;
                backdrop-filter: blur(10px);
            }
            
            /* Hero section mobile optimization */
            .hero-title {
                font-size: 2.2rem !important;
                line-height: 1.2;
                margin-bottom: 1rem;
            }
            
            .hero-subtitle {
                font-size: 1.1rem !important;
                line-height: 1.4;
                margin-bottom: 1.5rem;
            }
            
            .hero-buttons {
                flex-direction: column;
                gap: 1rem;
                width: 100%;
                align-items: center;
            }
            
            .hero-buttons .btn, .hero-buttons .bttel {
                display: block;
                width: 100%;
                max-width: 280px;
                margin: 0 auto 10px;
                padding: 15px 25px;
                font-size: 16px;
                text-align: center;
                border-radius: 10px;
            }
            
            /* Page titles */
            .page-title {
                font-size: 28px !important;
                margin-top: 15px;
                margin-bottom: 1.5rem;
            }
            
            /* Service cards mobile layout */
            .service-card {
                margin-bottom: 20px;
                padding: 20px;
                border-radius: 15px;
            }
            
            .service-card h1 {
                font-size: 24px !important;
                margin-bottom: 1rem;
            }
            
            .service-card img {
                margin-bottom: 20px;
                width: 100%;
                height: auto;
                border-radius: 10px;
            }
            
            .service-card p {
                font-size: 14px;
                line-height: 1.6;
            }
            
            /* Cards mobile optimization */
            .card {
                margin-bottom: 20px;
                border-radius: 15px;
            }
            
            .card-body {
                padding: 1.5rem;
            }
            
            /* Forms mobile optimization */
            .form-control {
                font-size: 16px; /* Prevents zoom on iOS */
                padding: 15px;
                border-radius: 10px;
                border: 2px solid rgba(209, 173, 86, 0.2);
            }
            
            .form-control:focus {
                border-color: var(--primary-gold);
                box-shadow: 0 0 0 0.2rem rgba(209, 173, 86, 0.25);
            }
            
            .form-label {
                font-size: 16px;
                margin-bottom: 8px;
                color: var(--text-dark);
            }
            
            /* Buttons mobile optimization */
            .btn, .bttel {
                padding: 15px 25px;
                font-size: 16px;
                border-radius: 10px;
                min-height: 50px;
                display: flex;
                align-items: center;
                justify-content: center;
                transition: all 0.3s ease;
            }
            
            /* Footer mobile optimization */
            .social-btn {
                width: 50px;
                height: 50px;
                margin: 5px;
                border-radius: 50%;
            }
            
            .social-btn i {
                font-size: 18px;
            }
            
            /* White page wrappers mobile */
            .white-page-wrapper {
                padding: 2rem 1rem;
            }
            
            .white-page-title {
                font-size: 28px;
                margin-bottom: 2rem;
            }
            
            /* Content cards mobile */
            .content-card {
                padding: 1.5rem;
                margin-bottom: 1.5rem;
                border-radius: 15px;
            }
            
            /* Team member cards mobile */
            .team-member-card {
                padding: 1.5rem;
                margin-bottom: 1.5rem;
                border-radius: 15px;
            }
            
            .member-image {
                width: 120px;
                height: 120px;
                margin-bottom: 1rem;
            }
            
            /* Gallery mobile optimization */
            .gallery-grid {
                grid-template-columns: 1fr;
                gap: 1rem;
            }
            
            .gallery-card {
                margin-bottom: 1rem;
                border-radius: 15px;
            }
            
            /* Posts mobile layout */
            .posts-main {
                margin-bottom: 2rem;
            }
            
            .post-card {
                margin-bottom: 1.5rem;
                border-radius: 15px;
            }
            
            .sidebar {
                margin-top: 2rem;
            }
            
            /* Partners mobile layout */
            .partners-grid {
                grid-template-columns: 1fr;
                gap: 1rem;
            }
            
            .partner-card {
                margin-bottom: 1rem;
                border-radius: 15px;
            }
            
            /* Consultation form mobile */
            .consultation-form-container {
                padding: 1.5rem;
                border-radius: 15px;
            }
            
            .form-row {
                flex-direction: column;
            }
            
            .form-group {
                margin-bottom: 1rem;
            }
            
            /* Touch-friendly interactions */
            .btn, .nav-link, .card, .service-card, .team-member-card, .gallery-card, .post-card, .partner-card {
                min-height: 44px;
                display: flex;
                align-items: center;
                justify-content: center;
            }
            
            /* Improve scrolling on mobile */
            body {
                -webkit-overflow-scrolling: touch;
            }
            
            /* Fix viewport issues */
            .container {
                padding-left: 15px;
                padding-right: 15px;
            }
            
            /* Scroll indicator mobile */
            .scroll-indicator {
                bottom: 20px;
                right: 20px;
                width: 50px;
                height: 50px;
            }
        }

        @media (max-width: 576px) {
            /* Extra small devices */
            .hero-title {
                font-size: 1.8rem !important;
                line-height: 1.1;
            }
            
            .hero-subtitle {
                font-size: 1rem !important;
                line-height: 1.3;
            }
            
            .page-title, .white-page-title {
                font-size: 24px !important;
                margin-bottom: 1rem;
            }
            
            .service-card {
                padding: 15px;
                margin-bottom: 1rem;
            }
            
            .service-card h1 {
                font-size: 20px !important;
                margin-bottom: 0.8rem;
            }
            
            .service-card p {
                font-size: 13px;
                line-height: 1.5;
            }
            
            .navbar-brand {
                font-size: 14px;
            }
            
            .navbar-brand img {
                height: 30px !important;
            }
            
            .navbar-nav .nav-link {
                padding: 10px 15px;
                font-size: 15px;
            }
            
            .btn, .bttel {
                padding: 12px 20px;
                font-size: 14px;
                min-height: 45px;
            }
            
            .form-control {
                padding: 12px;
                font-size: 16px;
            }
            
            .card-body {
                padding: 1rem;
            }
            
            /* White page wrappers extra small */
            .white-page-wrapper {
                padding: 1.5rem 0.5rem;
            }
            
            .content-card, .team-member-card {
                padding: 1rem;
                margin-bottom: 1rem;
            }
            
            .member-image {
                width: 100px;
                height: 100px;
            }
            
            .gallery-card, .post-card, .partner-card {
                margin-bottom: 1rem;
            }
            
            .consultation-form-container {
                padding: 1rem;
                margin: 1rem;
            }
            
            /* Footer adjustments */
            .social-btn {
                width: 45px;
                height: 45px;
                margin: 3px;
            }
            
            .social-btn i {
                font-size: 16px;
            }
            
            /* Scroll indicator extra small */
            .scroll-indicator {
                bottom: 15px;
                right: 15px;
                width: 45px;
                height: 45px;
            }
        }

        /* High DPI display optimizations */
        @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
            .service-card img,
            .card img {
                image-rendering: -webkit-optimize-contrast;
                image-rendering: crisp-edges;
            }
        }

        /* Dark mode optimizations */
        @media (prefers-color-scheme: dark) {
            body {
                background: var(--gradient-dark);
            }
        }

        /* Touch device optimizations */
        @media (hover: none) and (pointer: coarse) {
            .btn, .bttel, .nav-link {
                min-height: 44px;
                min-width: 44px;
            }
            
            .service-card:hover,
            .team-member-card:hover,
            .gallery-card:hover,
            .post-card:hover,
            .partner-card:hover {
                transform: none;
            }
            
            .service-card:active,
            .team-member-card:active,
            .gallery-card:active,
            .post-card:active,
            .partner-card:active {
                transform: scale(0.98);
            }
            
            .btn:active,
            .bttel:active {
                transform: scale(0.95);
            }
        }

        /* Landscape mobile optimization */
        @media (max-width: 768px) and (orientation: landscape) {
            .hero-title {
                font-size: 2rem !important;
            }
            
            .hero-subtitle {
                font-size: 1rem !important;
            }
            
            .navbar-collapse {
                max-height: 60vh;
                overflow-y: auto;
            }
            
            .hero-buttons {
                flex-direction: row;
                justify-content: center;
                gap: 1rem;
            }
            
            .hero-buttons .btn, .hero-buttons .bttel {
                width: auto;
                max-width: 200px;
            }
        }

        /* Very small screens (320px and below) */
        @media (max-width: 320px) {
            .hero-title {
                font-size: 1.6rem !important;
            }
            
            .hero-subtitle {
                font-size: 0.9rem !important;
            }
            
            .page-title, .white-page-title {
                font-size: 20px !important;
            }
            
            .service-card h1 {
                font-size: 18px !important;
            }
            
            .btn, .bttel {
                padding: 10px 16px;
                font-size: 13px;
                min-height: 40px;
            }
            
            .form-control {
                padding: 10px;
                font-size: 16px;
            }
            
            .navbar-brand img {
                height: 25px !important;
            }
            
            .social-btn {
                width: 40px;
                height: 40px;
                margin: 2px;
            }
            
            .social-btn i {
                font-size: 14px;
            }
        }

        /* Reduced motion preferences */
        @media (prefers-reduced-motion: reduce) {
            * {
                animation-duration: 0.01ms !important;
                animation-iteration-count: 1 !important;
                transition-duration: 0.01ms !important;
            }
            
            .scroll-arrow {
                animation: none;
            }
            
            .hero-title {
                animation: none;
            }
        }
    </style>
    
