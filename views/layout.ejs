        h5 { font-size: var(--font-size-lg); }
        h6 { font-size: var(--font-size-base); }
        p, body { font-size: var(--font-size-base); }
        
        /* Responsive Container System */
        .container-fluid {
            width: 100%;
            padding-left: var(--space-md);
            padding-right: var(--space-md);
            margin-left: auto;
            margin-right: auto;
        }
        
        .container {
            width: 100%;
